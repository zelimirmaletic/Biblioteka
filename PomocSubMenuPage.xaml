<Page x:Class="Biblioteka.PomocSubMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Biblioteka"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="200"
      Title="PomocSubMenuPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Column="0" Grid.RowSpan="9" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <SolidColorBrush Color="#e3e3e3"/>
            </Rectangle.Fill>
        </Rectangle>

        <Button Style="{StaticResource GreyButton}" x:Name="btnUputstvo" Grid.Column="1" Grid.Row="1" Click="btnUputstvo_Click">
            <TextBlock Width="120" HorizontalAlignment="Left">
                Uputstvo
            </TextBlock>
        </Button>

        <Button Style="{StaticResource GreyButton}" x:Name="btnKontakt" Grid.Column="1" Grid.Row="2" Click="btnKontakt_Click">
            <TextBlock Width="120" HorizontalAlignment="Left">
                Kontakt
            </TextBlock>
        </Button>
    </Grid>
</Page>
